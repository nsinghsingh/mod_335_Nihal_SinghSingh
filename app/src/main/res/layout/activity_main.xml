<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunny"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingTop="50dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="Unknown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="72sp"
            tools:text="00" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="30sp"
            tools:text="°C" />
    </LinearLayout>

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/icon_description"
        android:minWidth="256dp"
        android:minHeight="256dp"
        app:srcCompat="@drawable/ic_cloudy" />

    <LinearLayout
        android:id="@+id/hourlyWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hour1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="02:00" />

            <ImageView
                android:id="@+id/hourlyWeatherIcon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_description"
                app:srcCompat="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/hourlyTemperature1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="00 °C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hour2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="04:00" />

            <ImageView
                android:id="@+id/hourlyWeatherIcon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_description"
                app:srcCompat="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/hourlyTemperature2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="00 °C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hour3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="06:00" />

            <ImageView
                android:id="@+id/hourlyWeatherIcon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_description"
                app:srcCompat="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/hourlyTemperature3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="00 °C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hour4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="08:00" />

            <ImageView
                android:id="@+id/hourlyWeatherIcon4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_description"
                app:srcCompat="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/hourlyTemperature4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="00 °C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hour5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="10:00" />

            <ImageView
                android:id="@+id/hourlyWeatherIcon5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_description"
                app:srcCompat="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/hourlyTemperature5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="00 °C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hour6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="12:00" />

            <ImageView
                android:id="@+id/hourlyWeatherIcon6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_description"
                app:srcCompat="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/hourlyTemperature6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="00 °C" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dailyWeather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:ignore="NestedWeights"
                tools:text="Monday" />

            <TextView
                android:id="@+id/dailyTemperature1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:text="00 °C" />

            <ImageView
                android:id="@+id/dailyWeatherIcon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_description"
                android:maxHeight="36dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_cloudy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:ignore="NestedWeights"
                tools:text="Tuesday" />

            <TextView
                android:id="@+id/dailyTemperature2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:text="00 °C" />

            <ImageView
                android:id="@+id/dailyWeatherIcon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_description"
                android:maxHeight="36dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_cloudy" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:ignore="NestedWeights"
                tools:text="Wednesday" />

            <TextView
                android:id="@+id/dailyTemperature3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:text="00 °C" />

            <ImageView
                android:id="@+id/dailyWeatherIcon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_description"
                android:maxHeight="36dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_lightningstorm" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/day4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:ignore="NestedWeights"
                tools:text="Thursday" />

            <TextView
                android:id="@+id/dailyTemperature4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:text="00 °C" />

            <ImageView
                android:id="@+id/dailyWeatherIcon4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_description"
                android:maxHeight="36dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_raining" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/day5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:ignore="NestedWeights"
                tools:text="Friday" />

            <TextView
                android:id="@+id/dailyTemperature5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                tools:text="00 °C" />

            <ImageView
                android:id="@+id/dailyWeatherIcon5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_description"
                android:maxHeight="36dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_sun_raining" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>